<div class="container-margin-left">
  <h1>Search Result</h1>
<%= form_with url: search_books_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a book"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<% @search_books.each do |book| %>
    <p><%= link_to "#{book.name}", book_path(book) %></p>
    <p><%= book.author %></p>
    <p><%= book.description %></p>
    <%= image_tag book.image, class:"img-book" %>

<% end %>
</div>
