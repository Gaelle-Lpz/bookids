
<div class="container container-margin-left">

<h1>Book Index</h1>
<%= form_with url: search_books_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a book"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<%= link_to "Reading List", reading_list_books_path %>
<div class="container">
  <% @reading_list_books.each do |book| %>
    <p><%= link_to "#{book.name}", book_path(book) %></p>
  <% end %>
</div>
<%= link_to "Wish List", wish_list_books_path %>
<div class="container">
  <% @wish_list_books.each do |book| %>
    <p><%= link_to "#{book.name}", book_path(book) %></p>
  <% end %>

</div>
</div>