
<div class="container container-margin-left">

  <div class="search-container">
    <%= form_with url: search_books_path, method: :get, class: "el-center search-form d-flex"  do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a book"
      %>
      <%= submit_tag "Search", class: "btn-small btn-violet ms-3" %>
    <% end %>
  </div>


  <div class="index-container">
    <div class="title-container">
      <h2>Want to read :</h2>
      <%= link_to "View All", wish_list_books_path, class:"btn-small btn-blue" %>
    </div>
    <% @wish_list_books.each do |book| %>
      <%= link_to book_path(book) do %>
        <%= image_tag book.image, class:"img-index" %>
      <% end %>
    <% end %>
  </div>

  <div class="index-container">
    <div class="title-container">
      <h2>Currently reading :</h2>
      <%= link_to "View All", reading_list_books_path, class:"btn-small btn-blue" %>
    </div>
      <% @reading_list_books.each do |book| %>
        <%= link_to book_path(book) do %>
          <%= image_tag book.image, class:"img-index" %>
        <% end %>
      <% end %>
  </div>

</div>
