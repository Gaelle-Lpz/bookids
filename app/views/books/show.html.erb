<div class =container >
<div>
<h1>My Books</h1>
<h2><%= @book.name %></h2>
</div>
<div class = container>
<h3>Description:</h3><p><%= @book.description %></p>
<h3>Author:</h3><p><%= @book.author %></p>
<h3></h3><p><<%= image_tag @book.image %></p>
<h3>ISBN:</h3><p><%= @book.isbn %></p>
<h3>Score:</h3></h2><p><%= @book.score %></p>
</div>
<div>
<p> <%= link_to "Back to book lists", books_path(@book) %></p>
<p> <%= button_to "Wished Books", book_user_books_path(@book), method: :post %></p>
</div>
<div>

<div>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @book.reviews.each do |review| %>
    <li class="list-group-item"><%= review.comment %></li>
    <li class="list-group-item"><%= review.rating %></li>
  <% end %>
</ul>
<br>
</div>
