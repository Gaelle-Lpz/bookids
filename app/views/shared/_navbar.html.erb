<div class="navbar fixed-top">

  <div class="mt-3">
    <%= link_to books_path do %>
      <%= image_tag 'logo.png', class:"navbar-logo" %>
    <% end %>
  </div>

  <div class="navbar-link">
    <!-- TODO add link-->
    <%= link_to favorites_path do %>
      <i class="fa-solid fa-user-group icon-nav"></i>
    <% end %>

    <%= link_to rewards_path do %>
      <i class="fa-solid fa-trophy icon-nav"></i>
    <% end %>

  </div>

  <div class="navbar-user mb-3">
    <!-- TODO change to avatar user-->
    <% if user_signed_in? %>
      <%= link_to user_profil_path(current_user) do %>
        <%= image_tag current_user.avatar_url, class:"navbar-avatar mb-3" %>
      <% end %>
    <% end %>

    <div class="navbar-score">
    <% if user_signed_in? %>
      <%="#{current_user.total_score} pts "%>
    <% end %>
    </div>
  </div>
</div>
