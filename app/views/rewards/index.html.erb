

<div class="container container-margin-left">
    <h1 class="text-center mt-5">Your Rewards</h1>
    <h2 class="text-center mb-5"><%= "Your score is #{@user_total_score} points! Congratulations! Reading new books will earn you more points for even more rewards" %></h2>

  <div class="container-rewards row">
      <% @rewards.each do |reward| %>
        <div class="container-reward col m-3">
          <h2 class="mb-2 text-left"><%= reward.name %></h2>
          <% if @user_total_score > reward.required_score %>
            <%= image_tag reward.image, class:"navbar-avatar mb-2" %>
          <% else %>
            <%= image_tag "https://res.cloudinary.com/dotwftnzf/image/upload/v1675797319/avatar_lock_nwhmec.png", class:"navbar-avatar mb-2" %>
          <% end %>
          <!-- TODO add btn to change avatar to reward-->
          <p class="bg-small bg-blue text-center">Use this reward</p>
        </div>
      <% end %>
  </div>


</div>
