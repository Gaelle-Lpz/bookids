<div class="container container-margin-left">

  <%= form_with url: search_user_path, method: :get, class: "el-center search-form d-flex"  do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a Friend"
    %>
    <%= submit_tag "Search", class: "btn-small btn-violet ms-3" %>
  <% end %>

  <% @favorites.each do |favorite| %>
    <%= favorite.user_name %>
  <% end %>

</div>
